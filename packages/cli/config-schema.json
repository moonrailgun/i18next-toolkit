{
  "$ref": "#/definitions/i18next-toolkit-config",
  "definitions": {
    "i18next-toolkit-config": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string",
          "description": "Pointer to the schema against which this document should be validated."
        },
        "publicDir": {
          "type": "string",
          "default": "./public",
          "description": "Asset dir which serve static files"
        },
        "defaultLocale": {
          "type": "string",
          "default": "en",
          "description": "Fallback locale language"
        },
        "locales": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "en"
          ],
          "description": "Supported locales"
        },
        "namespaces": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "translation"
          ],
          "description": "namespace to split translation files, use for improve large translation project"
        },
        "transform": {},
        "indentSpaces": {
          "type": "number",
          "default": 2,
          "description": "Indent Spaces when generate json"
        },
        "verbose": {
          "type": "boolean",
          "default": false
        },
        "extractor": {
          "type": "object",
          "properties": {
            "input": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "./**/*.{js,jsx,ts,tsx}",
                "!./**/*.spec.{js,jsx,ts,tsx}",
                "!**/node_modules/**"
              ]
            },
            "output": {
              "type": "string",
              "default": "./public/locales"
            }
          },
          "additionalProperties": false,
          "default": {
            "input": [
              "./**/*.{js,jsx,ts,tsx}",
              "!./**/*.spec.{js,jsx,ts,tsx}",
              "!**/node_modules/**"
            ],
            "output": "./public/locales"
          }
        },
        "scanner": {
          "type": "object",
          "properties": {
            "source": {
              "type": "string",
              "default": "./**/*.tsx"
            },
            "tsconfigPath": {
              "type": "string",
              "default": "./tsconfig.json"
            },
            "indentationText": {
              "type": "string",
              "enum": [
                "  ",
                "    ",
                "        ",
                "\t"
              ],
              "default": "  "
            },
            "autoImport": {
              "type": "boolean",
              "default": false
            },
            "ignoreFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            },
            "ignoreText": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            }
          },
          "additionalProperties": false,
          "default": {
            "source": "./**/*.tsx",
            "tsconfigPath": "./tsconfig.json",
            "indentationText": "  ",
            "autoImport": false,
            "ignoreFiles": [],
            "ignoreText": []
          }
        },
        "translator": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "prompt",
                "openai",
                "microsoft"
              ],
              "default": "prompt"
            },
            "openai": {
              "type": "object",
              "properties": {
                "baseURL": {
                  "type": "string",
                  "description": "Default is: https://api.openai.com/v1"
                },
                "apiKey": {
                  "type": "string"
                },
                "modelName": {
                  "type": "string",
                  "description": "Check out this url: https://platform.openai.com/docs/models/overview",
                  "default": "gpt-4o-mini"
                }
              },
              "additionalProperties": false,
              "description": "Config with translate file by openai"
            }
          },
          "additionalProperties": false,
          "default": {
            "type": "prompt"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
